{
  "name": "@heal7/frontend-workspace",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "🏗️ HEAL7 프론트엔드 모노레포 워크스페이스",
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.15.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter './packages/*' dev",
    "dev:saju": "pnpm --filter @heal7/saju-app dev",
    "dev:crawling": "pnpm --filter @heal7/crawling-app dev",
    "dev:admin": "pnpm --filter @heal7/admin-app dev",
    "dev:cube": "pnpm --filter @heal7/cube-module-app dev",
    
    "build": "pnpm --filter @heal7/shared build && pnpm --parallel --filter './packages/!shared' build",
    "build:saju": "pnpm --filter @heal7/shared build && pnpm --filter @heal7/saju-app build",
    "build:crawling": "pnpm --filter @heal7/shared build && pnpm --filter @heal7/crawling-app build",
    "build:admin": "pnpm --filter @heal7/shared build && pnpm --filter @heal7/admin-app build",
    "build:cube": "pnpm --filter @heal7/shared build && pnpm --filter @heal7/cube-module-app build",
    
    "deploy:saju": "pnpm build:saju && sudo cp -r packages/saju-app/dist/* /var/www/saju.heal7.com/ && sudo chown -R www-data:www-data /var/www/saju.heal7.com/",
    "deploy:crawling": "pnpm build:crawling && sudo cp -r packages/crawling-app/dist/* /var/www/crawling.heal7.com/ && sudo chown -R www-data:www-data /var/www/crawling.heal7.com/",
    "deploy:admin": "pnpm build:admin && sudo cp -r packages/admin-app/dist/* /var/www/admin.heal7.com/ && sudo chown -R www-data:www-data /var/www/admin.heal7.com/",
    
    "lint": "pnpm --parallel --filter './packages/*' lint",
    "type-check": "pnpm --parallel --filter './packages/*' type-check",
    "clean": "pnpm --parallel --filter './packages/*' clean"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0"
  },
  "keywords": [
    "monorepo",
    "workspace",
    "react",
    "vite",
    "heal7",
    "saju",
    "crawling",
    "fortune-telling"
  ]
}